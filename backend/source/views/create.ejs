<body>
    <%- include('./partials/header.ejs') %>

        <main>

            <div class="container-all">

                <form action="/products/guardar" method="post" enctype="multipart/form-data" id="form-create">

                    <fieldset id="fsName" class="text-area">
                        <legend class="title-area">Título</legend>
                        <input type="text" name="name" id="name" placeholder="Título del Juego" class="input-text" minlength="5" maxlength="50">
                    </fieldset>

                    <fieldset id="fsPrice" class="text-area">
                        <legend class="title-area">Precio de producto</legend>
                        <input type="text" name="price" id="price" placeholder="$$$$$" class="input-text">
                    </fieldset>

                    <fieldset id="fsImage" class="text-area">
                        <label for="image">Subir imagen</label>
                        <input type="file" name="image" id="image" class="input-text">
                        <p id="msjImage" class="input-text"></p>
                    </fieldset>

                    <fieldset id="fsDescription" class="text-area">
                        <legend class="title-area">Descripción del producto</legend>
                        <textarea name="description" id="description" cols="30" rows="3"
                            placeholder="Escribe la descripción del producto aqui..." class="input-text"></textarea>
                    </fieldset>

                    <fieldset class="text-area">
                        <legend class="title-area">Categoría del producto</legend>

                        <% categories.forEach(category => {%>
                            <label for="category-<%= category.name %>" class="radio-options">
                                <input type="radio" name="category" id="category-<%= category.name %>"
                                    value="<%= category.id %>"><%= category.name %>
                            </label>
                        <% }); %>

                    </fieldset>

                    <fieldset class="text-area">
                        <legend class="title-area">¿En oferta?</legend>

                        <label for="offer-si" class="radio-options">
                            <input type="radio" name="inOffer" id="offer-si" value="1">Si</label>
                        <label for="offer-no" class="radio-options">
                            <input type="radio" name="inOffer" id="offer-no" value="0" checked>No</label>
                    </fieldset>
                    <section id="buttons">
                        <button type="submit" class="button-c">Guardar</button>
                        <button type="reset" class="button-c">Resetear</button>
                        <a href="/" class="button-c">Volver</a>
                    </section>
                </form>
            </div>
        </main>
        <footer class="main-footer">
            <%- include('./partials/footer.ejs') %>
        </footer>
        <script src="https://unpkg.com/validator@latest/validator.min.js"></script>
        <script src="../js/product.js"></script>
