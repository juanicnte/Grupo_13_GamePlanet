<head>
    <!--<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">-->
    <%- include('./partials/head.ejs') %>
    <link rel="stylesheet" href="../css/create.css">
</head>

<body>
    <%- include('./partials/header.ejs') %>

        <main>


            <div class="container-all">


                <form action="/products/guardar" method="post"  enctype="multipart/form-data" id="form-create">
                
                    <fieldset class="text-area">
                            <legend class="title-area">Título</legend>
                        <input type="text" name="name" id="name" placeholder="Título del Juego" class="input-text">
                    </fieldset>

                    <fieldset class="text-area">
                        <legend class="title-area">Precio de producto</legend>
                        <input type="text" name="price" id="price" placeholder="$$$$$" class="input-text" >
                    </fieldset>

                    <fieldset class="text-area">
                            <label for="image">Subir imagen</label>
                            <input type="file" name="image" id="image" class="input-text">
                    </fieldset>

                    <fieldset class="text-area">
                        <legend class="title-area">Descripción del producto</legend>
                        <textarea name="description" id="description" cols="30" rows="3" placeholder="Escribe la descripción del producto aqui..."
                        class="input-text" ></textarea>
                    </fieldset>

                    
                        <fieldset class="text-area">
                            <legend class="title-area">Categoría del producto</legend>
                            
                                <label for="category-Playstation" class="radio-options">
                                    <input type="radio" name="category" id="category-Playstation"
                                    value="Playstation">Playstation</label>

                                 <label for="category-Xbox" class="radio-options">
                                     <input type="radio" name="category" id="category-Xbox" value="Xbox">Xbox</label>

                                 <label for="category-Nintendo" class="radio-options">
                                    <input type="radio" name="category" id="category-Nintendo"
                                            value="Nintendo">Nintendo</label>

                                 <label for="category-PC" class="radio-options">
                                    <input type="radio" name="category" id="category-PC" value="PC">PC</label>

                        </fieldset>

                        <fieldset class="text-area">    
                            <legend class="title-area">Clasificación del producto</legend>
                
                                <label for="classification-Actuales" class="radio-options">
                                    <input type="radio" name="classification" id="classification-Actuales"
                                        value="Juegos del momento">Juegos del momento</label>
                                <label for="classification-MasVendidos" class="radio-options">
                                    <input type="radio" name="classification" id="classification-MasVendidos"
                                        value="Más vendidos">Más vendidos</label>
                                <label for="classification-Soporte" class="radio-options">
                                    <input type="radio" name="classification" id="classification-Soporte"
                                        value="Soporte 24/7">Soporte 24/7</label>
                                        

                    </fieldset>
                    <fieldset class="text-area">
                            <legend class="title-area">¿En oferta?</legend>
        
                            <label for="offer-si" class="radio-options">
                                <input type="radio" name="inOffer" id="offer-si" value="1">Si</label>
                            <label for="offer-no" class="radio-options">
                                <input type="radio" name="inOffer" id="offer-no" value="0">No</label>
                    </fieldset>
             <section id="buttons">
                    <button type="submit" class="button-c">Guardar</button>
                    <button type="reset" class="button-c">Resetear</button>
                    <a href="/" class="button-c">Volver</a>
            </section>
                </form>
            </div>
        </main>
        <footer class="main-footer">
            <%- include('./partials/footer.ejs') %>
        </footer>
</body>

</html>